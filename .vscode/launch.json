    "version": "0.0.1",
    "configurations": [
        {
            "name": "Notification Forwarder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\venv\\Scripts\\uvicorn.exe",
            "args": [
                "masterServer:app",
                "--reload",
                "--host",
                "192.168.0.23",
                "--port",
                "7590"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}